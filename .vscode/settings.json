{
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.lineHeight": 24,
    "editor.letterSpacing": 0.5,
    "editor.rulers": [90],
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "explorer.confirmDelete": false,
    "php.suggest.basic": false, // Disable built-in PHP suggestions
    "intelephense.environment.phpVersion": "8.2.0", // Set the PHP version (adjust based on your version)
    "intelephense.files.maxSize": 1000000, // Increase file size limit for larger files
    "intelephense.diagnostics.enable": true,
    "intelephense.format.enable": true,
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "Core",
        "curl",
        "date",
        "dom",
        "filter",
        "ftp",
        "hash",
        "iconv",
        "json",
        "libxml",
        "mbstring",
        "mysqli",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_mysql",
        "pdo_pgsql",
        "pgsql",
        "phar",
        "posix",
        "readline",
        "Reflection",
        "session",
        "SimpleXML",
        "SPL",
        "standard",
        "tokenizer",
        "xml",
        "xdebug",
        "zip",
        "zlib"
    ]
}
